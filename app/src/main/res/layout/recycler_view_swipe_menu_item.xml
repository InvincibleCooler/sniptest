<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/swipe_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/left1_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00f" />

        <TextView
            android:id="@+id/left2_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/left1_tv"
            android:background="#0ff" />

        <TextView
            android:id="@+id/right1_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toStartOf="@+id/right2_tv"
            android:background="#0f0" />

        <TextView
            android:id="@+id/right2_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:background="#ff0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:background="#f0f" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/image_iv"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:textColor="#000"
            android:textSize="20dp" />
    </RelativeLayout>
</RelativeLayout>

